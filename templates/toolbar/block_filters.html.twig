{%- block base_widget -%}
    <{{ element }} {{ block('attributes') }}
    {% if stimulus is defined %}
        {{ stimulus_controller(stimulus.controller, {
            modalUrl: stimulus.modalUrl,
            size: stimulus.size,
            modalTitle: stimulus.title,
        }) }}
        data-action="{{ stimulus.controller }}#{{ stimulus.action }}"
    {% endif %}
    >
    {{- block('icon') }}
    {%- if name != 'widget' -%}
        {% if icon_only == false %}
            {{- block('text') }}
        {% endif %}
    {%- endif -%}
    {%- for child in widget -%}
        {{- render_widget(child) -}}
    {%- endfor -%}
    </{{ element }}>

{%- endblock -%}

{%- block button_dropdown_widget -%}
    <div class="dropdown">
        <button{{ block('attributes') }}>
            {{- block('icon') }}&nbsp;
            {% if icon_only == false %}
            {{- block('text') }}
            {% endif %}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            {%- for child in widget -%}
                {{ child.addClass('dropdown-item') }}
                {{ render_widget(child) }}
            {%- endfor -%}
        </div>
    </div>
{%- endblock -%}

